{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "sourceMap": true
  },
  "include": ["apps"],
  "exclude": ["**/node_modules", "**/dist"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
